<%= form_for [current_team, @retrospective, object], authenticity_token: true, remote: true, html: { class: classes } do |f| %>
  <label class="ls-label col-md-6">
    <%= f.text_field :description, required: true %>
  </label>
  <div class="ls-actions-btn">
    <%= f.submit t('form.add'), class: 'ls-btn-primary' %>
  </div>
<% end %>
