<% if @topic.type === 'PositiveTopic' %>
  var table = $('#positive-topics-table');
<% else %>
  var table = $('#negative-topics-table');
<% end %>
var line = table.find('[data-id=<%= @topic.id %>]');
var likeButton = line.find('.like-button');

var method = likeButton.data('method');

likeButton.attr('data-method', 'post');
likeButton.data('method', 'post');
likeButton.prop('href', '<%= like_topic_path(@topic) %>');

likeButton.html('(' + <%= @topic.like %> + ')').blur();
