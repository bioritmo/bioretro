<% if @topic.type === 'PositiveTopic' %>
  var table = $('#positive-topics-table');
<% else %>
  var table = $('#negative-topics-table');
<% end %>
var line = table.find('[data-id=<%= @topic.id %>]');
var dislikeButton = line.find('.dislike-button');

dislikeButton.attr('data-method', 'patch');
dislikeButton.data('method', 'patch');
dislikeButton.prop('href', '<%= remove_dislike_topic_path(@topic) %>');

dislikeButton.html(' (' + <%= @topic.dislike %> + ')').blur();
